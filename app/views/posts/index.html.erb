    <% @posts.each do |post| %>
     <h1><%= link_to post.title, post_path(post) %></h1>
        <p><%= post.name %> <em><%= post.created_at.strftime('%b %d, %Y') %></em></p>
		<p><%= raw truncate post.content, :length => 300 %></p>
		<p><%= link_to 'Read the article', post_path(post), :class => 'btn btn-mini' %></p>
    <% end %>
