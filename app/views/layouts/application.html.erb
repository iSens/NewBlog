<!DOCTYPE html>
<html>
<head>
  <title>Newblog</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>
	      <a class="brand" href="#">My New Blog!</a>
	      <div class="nav-collapse">
	        <ul class="nav">
	          <li><%= link_to "Home", posts_path %></li>
	          <li><%= link_to "About", 'about' %></li>
	          <li><%= link_to "Contact", 'contact' %></li>
			  <% if current_user %>
			  <li><%= link_to 'New Post', new_post_path %></li>						
			  <li><a heref="#">Logged in as <%= current_user.email %></a></li>
			  <li><%= link_to "Log out", session_path("current"), method: "delete" %></li>
					<% else %>
	          <li><%= link_to "Log In", login_path %></li><% end %>
	        </ul>
	      </div>
	    </div>
	  </div>
	</div>
	
	<div class="container">
	  <div class="row">
	    <div class="span9">
			<% flash.each do |name, msg| %>
			<div class="alert alert-success">
			<a class="close" data-dismiss="alert">Ã—</a>
				<%= msg %>
			</div>
			<% end %>
	        <%= yield %></div>
